<div class="row">
  <div class="col-md-12">
    <h2>Posts</h2>
    <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
    <hr />

    {{! //TODO: render a list of all post title values here }}
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Post&nbsp;ID</th>
            <th>Title</th>
            <th>Post&nbsp;Date</th>
            <th>Category</th>
            <th>Published</th>
            <th></th>
            <!-- New column for remove button -->
          </tr>
        </thead>
        <tbody>
          {{#each posts}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{postDate}}</td>
              <td><a href="/posts?category={{category}}">{{category}}</a></td>
              <td>{{published}}</td>
              <td>
                <a href="/posts/delete/{{id}}" class="btn btn-danger">Remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <p></p>

  </div>
  {{#unless posts}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>