<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category&nbsp;ID</th>
            <th>Category Name</th>
            <th></th>
            <!-- New column for remove button -->
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
            <tr>
              <td><a href="/posts?category={{id}}">{{id}}</a></td>
              <td><a href="/posts?category={{id}}">{{category}}</a></td>
              <td>
                <a
                  href="/categories/delete/{{id}}"
                  class="btn btn-danger"
                >Remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{#unless categories}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/unless}}

  </div>
</div>